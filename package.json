{
  "name": "@frogpond/ccc-server",
  "description": "",
  "keywords": [],
  "author": "Frog Pond Labs, LLC",
  "license": "AGPL-3.0-only",
  "type": "module",
  "prettier": {
    "printWidth": 100,
    "useTabs": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "semi": false
  },
  "scripts": {
    "build": "tsc --build .",
    "build:watch": "tsc --watch --build .",
    "p": "npm run pretty -- --no-write --check",
    "pretty": "prettier --write source scripts",
    "lint": "eslint --cache --max-warnings=0 .",
    "start": "node source/ccc-server/index.ts",
    "start:watch": "NODE_ENV=development node --watch source/ccc-server/index.ts",
    "start:dev": "NODE_ENV=development node source/ccc-server/index.ts",
    "start:prod": "NODE_ENV=production node source/ccc-server/index.ts",
    "stolaf-college": "env INSTITUTION=stolaf-college npm run start:dev",
    "carleton-college": "env INSTITUTION=carleton-college npm run start:dev",
    "test:stolaf-college": "./scripts/smoke-test.sh stolaf-college",
    "test:carleton-college": "./scripts/smoke-test.sh carleton-college",
    "test": "node --test",
    "watch": "npm run build:watch & npm run start:watch"
  },
  "dependencies": {
    "@koa/body-parsers": "^6.0.1",
    "@koa/etag": "5.0.1",
    "@koa/router": "^14.0.0",
    "@sentry/node": "10.21.0",
    "@sentry/profiling-node": "10.21.0",
    "@sentry/utils": "8.55.0",
    "dotenv": "^17.0.0",
    "get-urls": "12.1.0",
    "html-entities": "2.6.0",
    "ical.js": "^2.0.1",
    "is-absolute-url": "5.0.0",
    "jsdom": "27.0.1",
    "koa": "3.1.1",
    "koa-compress": "5.1.1",
    "koa-json-error": "3.1.2",
    "ky": "^1.3.0",
    "lodash-es": "^4.17.21",
    "moment": "2.30.1",
    "moment-timezone": "0.6.0",
    "normalize-url": "8.1.0",
    "p-map": "7.0.3",
    "quick-lru": "^7.3.0",
    "safe-stable-stringify": "^2.5.0",
    "turndown": "7.2.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "9.38.0",
    "@types/jsdom": "27.0.0",
    "@types/koa": "3.0.1",
    "@types/koa__router": "12.0.5",
    "@types/koa-compress": "4.0.7",
    "@types/lodash-es": "4.17.12",
    "@types/turndown": "5.0.5",
    "eslint": "9.38.0",
    "globals": "16.4.0",
    "prettier": "3.6.2",
    "typed-query-selector": "2.12.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.2"
  }
}

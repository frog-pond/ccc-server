{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "prConcurrentLimit": 4,
  "reviewers": [],
  "packageRules": [
    {
      "description": "We use this in our production compose file, so we want it to always pull the latest version of the image.",
      "matchManagers": ["docker-compose"],
      "matchPackageNames": ["frogpond/ccc-server"],
      "pinDigests": false
    }
  ]
}
